var todoApp = angular.module('todoApp');

todoApp.controller('setPasswordController', function($scope, passwordService,
		$state) {
	$scope.setPassword=function(){
		
		var set = passwordService.setPassword($scope.user, $scope.error);
		set.then(function (responce) {
			$state.go('login');
		},
		function(error){
			$scope.errorMessage = error.data.message;
			$state.go('/');	
	
		})
		
		
	}
	
});